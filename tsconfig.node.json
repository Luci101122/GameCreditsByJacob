{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "outDir": "./dist"
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
